{
  "family": "my-gi-NextJS-app-service",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "my-gi-NextJS-app",
      "image": "128115030554.dkr.ecr.ap-southeast-1.amazonaws.com/next_js_poc:$(cat /app/package.json | jq -r '.version')",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fargate-task-definition",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment" :[
        {
          "NEXT_PUBLIC_FE_VARIABLE": "From NEXT_PUBLIC prefix environment variable"
        },{
          "API_VARIABLE": "value from environment vaiable"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::128115030554:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "taskRoleArn": null
}
