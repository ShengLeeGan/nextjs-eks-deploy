{
  "family": "my-gi-NextJS-app-service",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "my-gi-NextJS-app",
      "image": "128115030554.dkr.ecr.ap-southeast-1.amazonaws.com/next_js_poc:$(cat /app/package.json | jq -r '.version')",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fargate-task-definition",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environmentFiles": [
        {
          "type": "s3",
          "value": "arn:aws:s3:::my-gi-ecs-poc-bucket/environment-variables/env-vars.env"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::128115030554:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::128115030554:policy/my-gi-ECS-task-role",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
